{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=combined_main.db"
  },
  "Sharding": {
    "Accounts": {
      "Strategy": "Property",
      "ShardKey": "Region",
      "Regions": ["EU", "US", "APAC"]
    },
    "Transactions": {
      "Strategy": "DateRange",
      "ShardKey": "TransactionDate",
      "Interval": "Month"
    },
    "Documents": {
      "Strategy": "Manual",
      "ShardKey": "DocumentType",
      "Tables": ["Documents_Policies", "Documents_Guidelines", "Documents_Reports"]
    },
    "Audits": {
      "Strategy": "Hash",
      "ShardKey": "EntityReference",
      "ShardCount": 4
    }
  }
}

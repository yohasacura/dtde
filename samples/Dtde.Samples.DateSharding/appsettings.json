{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=datesharding.db"
  },
  "DateSharding": {
    "TransactionShards": {
      "Interval": "Month",
      "Description": "Monthly transaction tables"
    },
    "AuditLogShards": {
      "Interval": "Day",
      "Description": "Daily audit log tables"
    },
    "MetricShards": {
      "Interval": "Hour",
      "Description": "Hourly metric data point tables"
    }
  }
}
